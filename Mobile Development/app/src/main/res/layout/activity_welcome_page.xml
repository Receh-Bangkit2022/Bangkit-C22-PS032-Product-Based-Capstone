<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintWelcomepage"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/brown"
    tools:context=".ActivityWelcome">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDaftar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/iconbutton"
            android:fontFamily="@font/regular"
            android:text="@string/lbl_daftar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/image2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/image2"
            app:layout_constraintTop_toBottomOf="@+id/image2"
            tools:text="@string/lbl_daftar" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMasuk"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/iconbutton"
            android:fontFamily="@font/regular"
            android:text="@string/lbl_masuk"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btnDaftar"
            app:layout_constraintHorizontal_bias="0.0"

            app:layout_constraintStart_toStartOf="@+id/btnDaftar"
            app:layout_constraintTop_toBottomOf="@+id/txtSudahPunyaAku"
            app:layout_constraintVertical_bias="0.134"
            tools:text="@string/lbl_masuk" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="170dp"
            android:layout_height="204dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="@+id/txtSelamatDatang"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/txtSelamatDatang"
            app:layout_constraintTop_toBottomOf="@+id/txtSelamatDatang"
            android:src="@drawable/img_2" />

        <TextView
            android:id="@+id/txtSudahPunyaAku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/regular"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/btnDaftar"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="@+id/btnDaftar"
            app:layout_constraintTop_toBottomOf="@+id/btnDaftar"
            android:text="@string/msg_sudah_punya_aku" />

        <TextView
            android:id="@+id/txtSelamatDatang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/regular"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/txtReceh"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toStartOf="@+id/txtReceh"
            app:layout_constraintTop_toBottomOf="@+id/txtReceh"
            tools:text="@string/lbl_selamat_datang" />

        <TextView
            android:id="@+id/txtReceh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="116dp"
            android:fontFamily="@font/lsemibold"
            android:text="@string/lbl_receh"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
