<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/brown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/backku"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="45dp"
            android:background="@null"
            android:src="@drawable/img_vector_84"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/regular"
            android:text="@string/topup"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/backku"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintStart_toEndOf="@+id/backku"
            app:layout_constraintTop_toTopOf="@+id/backku" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="460dp"
        android:background="@color/white"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout5"
        app:layout_constraintVertical_bias="0.403">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lsemibold"
            android:text="@string/nama"
            android:textColor="@color/brown"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/regular"
            android:text="@string/pilihnom"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/iconbutton"
            android:fontFamily="@font/regular"
            android:text="@string/lanjutkan"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/rupiah"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/rupiah"
            app:layout_constraintTop_toBottomOf="@+id/rupiah" />

        <TextView
            android:id="@+id/masukkan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/regular"
            android:text="@string/masukkanrp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/opsi6"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/opsi5"
            app:layout_constraintTop_toBottomOf="@+id/opsi5" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/rupiah"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:boxStrokeWidth="0dp"
            app:hintEnabled="false"
            app:prefixText="Rp"
            app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/masukkan">

            <EditText
                android:id="@+id/rupiahEt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/garis"
                android:ems="10"
                android:hint="@string/jumlah"
                android:inputType="number"
                android:padding="15dp"
                android:textAlignment="center"
                tools:ignore="TextFields"
                tools:layout_editor_absoluteX="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/opsi1"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/iconbutton"
            android:fontFamily="@font/regular"
            android:text="@string/opsi1"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/opsi2"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:background="@drawable/iconbutton"
            android:fontFamily="@font/regular"
            android:text="@string/opsi2"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/opsi1"
            app:layout_constraintTop_toTopOf="@+id/opsi1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/opsi3"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/iconbutton"
            android:fontFamily="@font/regular"
            android:text="@string/opsi3"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/opsi1"
            app:layout_constraintTop_toBottomOf="@+id/opsi1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/opsi4"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/iconbutton"
            android:fontFamily="@font/regular"
            android:text="@string/opsi4"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/opsi2"
            app:layout_constraintTop_toBottomOf="@+id/opsi2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/opsi5"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/iconbutton"
            android:fontFamily="@font/regular"
            android:text="@string/opsi5"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/opsi3"
            app:layout_constraintTop_toBottomOf="@+id/opsi3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/opsi6"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/iconbutton"
            android:fontFamily="@font/regular"
            android:text="@string/opsi6"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/opsi4"
            app:layout_constraintTop_toBottomOf="@+id/opsi4" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>