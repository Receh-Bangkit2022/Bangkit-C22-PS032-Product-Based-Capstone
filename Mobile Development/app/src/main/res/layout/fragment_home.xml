<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.home.HomeFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/lsemibold"
        android:text="@string/nama"
        android:textColor="@color/brown"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/uidata"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/regular"
            android:text="@string/bal"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/actbal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text="@string/activebal"

            android:textColor="@color/white"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="@+id/balance"
            app:layout_constraintTop_toBottomOf="@+id/balance" />

        <TextView
            android:id="@+id/incbonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/regular"
            android:text="@string/income"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/actbal"
            app:layout_constraintTop_toBottomOf="@+id/actbal" />

        <TextView
            android:id="@+id/bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text="@string/incomebonus"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/balance"
            app:layout_constraintTop_toBottomOf="@+id/incbonus" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/scan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/iconbutton"
        android:fontFamily="@font/regular"
        android:letterSpacing="0"
        android:orientation="vertical"
        android:text="@string/scan"
        android:textAllCaps="false"
        app:icon="@drawable/img_vector_15"
        app:iconGravity="textTop"
        app:iconPadding="15dp"
        app:iconSize="70dp"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/barcode"
        app:layout_constraintTop_toTopOf="@+id/barcode" />

    <Button
        android:id="@+id/qna"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/iconbutton"
        android:fontFamily="@font/regular"
        android:letterSpacing="0"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:text="@string/lbl_pertanyaan"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:icon="@drawable/tanya"
        app:iconSize="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/seller"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/barcode"
        app:layout_constraintTop_toTopOf="@+id/seller" />

    <Button
        android:id="@+id/barcode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/iconbutton"
        android:fontFamily="@font/regular"
        android:insetTop="8dp"
        android:letterSpacing="0"
        android:paddingLeft="1dp"
        android:paddingTop="5dp"
        android:paddingRight="1dp"
        android:text="@string/qrcode"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="14sp"
        app:icon="@drawable/img_"
        app:iconGravity="textTop"
        app:iconPadding="16dp"
        app:iconSize="65dp"
        app:layout_constraintEnd_toStartOf="@+id/scan"
        app:layout_constraintStart_toEndOf="@+id/topup"
        app:layout_constraintTop_toTopOf="@+id/topup"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/topup"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/iconbutton"
        android:fontFamily="@font/regular"
        android:insetTop="2dp"
        android:insetBottom="0dp"
        android:letterSpacing="0"
        android:paddingLeft="1dp"
        android:paddingTop="1dp"
        android:paddingRight="1dp"
        android:text="@string/topup"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="10sp"
        app:icon="@drawable/union"
        app:iconGravity="textTop"
        app:iconPadding="5dp"
        app:iconSize="35dp"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/mitra"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/iconbutton"
        android:fontFamily="@font/regular"
        android:insetTop="2dp"
        android:insetBottom="0dp"
        android:letterSpacing="0"
        android:paddingLeft="1dp"
        android:paddingTop="1dp"
        android:paddingRight="1dp"
        android:text="@string/mitra"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="10sp"
        app:icon="@drawable/lokasimitra"
        app:iconGravity="textTop"
        app:iconPadding="5dp"
        app:iconSize="35dp"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toEndOf="@+id/topup"
        app:layout_constraintStart_toStartOf="@+id/topup"
        app:layout_constraintTop_toBottomOf="@+id/topup"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/seller"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/iconbutton"
        android:fontFamily="@font/regular"
        android:insetTop="2dp"
        android:insetBottom="0dp"
        android:letterSpacing="0"
        android:paddingLeft="1dp"
        android:paddingTop="1dp"
        android:paddingRight="1dp"
        android:text="@string/seller"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="10sp"
        app:icon="@drawable/lokasiseller"
        app:iconGravity="textTop"
        app:iconPadding="5dp"
        app:iconSize="35dp"
        app:iconTintMode="multiply"
        app:layout_constraintStart_toStartOf="@+id/mitra"
        app:layout_constraintTop_toBottomOf="@+id/mitra"
        tools:ignore="SmallSp" />


</androidx.constraintlayout.widget.ConstraintLayout>